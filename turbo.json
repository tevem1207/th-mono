{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["VERCEL_*"]
    },
    "typeboy#build": {
      "env": ["DATABASE_*", "AUTH_*", "TEST_USER_ID"]
    },
    "portfolio#lint": {
      "env": ["DATABASE_*", "NOTION_*"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalPassThroughEnv": ["NODE_ENV"]
}
